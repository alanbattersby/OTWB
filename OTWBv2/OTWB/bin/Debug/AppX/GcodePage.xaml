<common:LayoutAwarePage
    x:Name="pageRoot"
    x:Class="Geometric_Chuck.GcodePage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Geometric_Chuck"
    xmlns:common="using:Geometric_Chuck.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>

        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">Gcode Generator</x:String>
        
    </Page.Resources>
    <common:LayoutAwarePage.BottomAppBar>
        <AppBar>
            <StackPanel Orientation="Horizontal" Margin="0,0,-20,0">
                <StackPanel HorizontalAlignment="Left" Height="100" Width="530" Orientation="Horizontal">
                    <Button x:ConnectionId='7' AutomationProperties.Name="Save Code" Style="{StaticResource SaveAppBarButtonStyle}"                        />
                    <Button x:ConnectionId='8' AutomationProperties.Name="Generate Code" Style="{StaticResource SaveAppBarButtonStyle}"                            />
                    <Button x:ConnectionId='9' AutomationProperties.Name="Clear Code" Style="{StaticResource DiscardAppBarButtonStyle}"                         />
                    <Button x:ConnectionId='10' AutomationProperties.Name="Settings" Style="{StaticResource SettingsAppBarButtonStyle}"                     />
                   
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="405">
                    <Button x:ConnectionId='5' AutomationProperties.Name="Save Templates"                              Style="{StaticResource SaveAppBarButtonStyle}"/>
                    <Button x:ConnectionId='6' AutomationProperties.Name="Load Templates"                              Style="{StaticResource ImportAppBarButtonStyle}"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Width="415" RenderTransformOrigin="0,0">
                    <Button x:ConnectionId='1' AutomationProperties.Name="Point" CommandParameter="POINT"                      Style="{StaticResource EditAppBarButtonStyle}" />
                    <Button x:ConnectionId='2' AutomationProperties.Name="Point Offset" CommandParameter="POINT_OFFSET"                      Style="{StaticResource EditAppBarButtonStyle}" />
                    <Button x:ConnectionId='3' AutomationProperties.Name="Cylindrical" CommandParameter="CYLINDRICAL"                      Style="{StaticResource EditAppBarButtonStyle}" />
                    <Button x:ConnectionId='4' AutomationProperties.Name="Cylindrical Offset" CommandParameter="CYLINDRICAL_OFFSET"                      Style="{StaticResource EditAppBarButtonStyle}" />
                </StackPanel>
            </StackPanel>
        </AppBar>
    </common:LayoutAwarePage.BottomAppBar>
    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Style="{StaticResource LayoutRootStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="82*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='11' x:Name="backButton"                IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}"/>
            <TextBlock x:Name="pageTitle" Grid.Column="1" Text="{StaticResource AppName}" Style="{StaticResource PageHeaderTextStyle}"/>
            <TextBlock x:Name="pathName" Grid.Column="2" Text="{Binding PathName}" Style="{StaticResource PageHeaderTextStyle}"/>
        </Grid>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.RowSpan="2" Margin="55,0,0,0">
            <ListView x:Name="GcodeFileCombo" ItemsSource="{Binding Code}" Margin="0,0,0,133" Width="240">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding FileName}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ScrollViewer Width="815" Margin="50,0,0,38" BorderThickness="10" BorderBrush="{StaticResource AppBarBorderThemeBrush}">
                <TextBlock Text="{Binding SelectedItem.Code, ElementName=GcodeFileCombo}" Margin="20,0,0,0" Style="{StaticResource ItemTextStyle}"   />
            </ScrollViewer>
            </StackPanel>
        <VisualStateManager.VisualStateGroups>

            <!-- Visual states reflect the application's view state -->
            <VisualStateGroup x:Name="ApplicationViewStates">
                <VisualState x:Name="FullScreenLandscape"/>
                <VisualState x:Name="Filled"/>

                <!-- The entire page respects the narrower 100-pixel margin convention for portrait -->
                <VisualState x:Name="FullScreenPortrait">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PortraitBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

                <!-- The back button and title have different styles when snapped -->
                <VisualState x:Name="Snapped">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pageTitle" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedPageHeaderTextStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</common:LayoutAwarePage>

