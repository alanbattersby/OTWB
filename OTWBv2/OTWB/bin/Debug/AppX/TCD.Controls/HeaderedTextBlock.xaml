<UserControl
    x:Class="TCD.Controls.HeaderedTextBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    x:Name="self">
    
    <Grid>
        <TextBlock Text="{Binding Header, ElementName=self}" Style="{StaticResource CaptionTextStyle}" Foreground="Gray"/>
        <TextBlock Text="{Binding Text, ElementName=self}" VerticalAlignment="Top" Margin="0,20,0,0" Style="{StaticResource BodyTextStyle}" />
    </Grid>
</UserControl>

