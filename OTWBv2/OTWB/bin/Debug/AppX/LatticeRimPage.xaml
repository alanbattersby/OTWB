<common:LayoutAwarePage
    x:Name="pageRoot"
    x:Class="OTWB.LatticeRimPage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OTWB"
    xmlns:common="using:OTWB.Common"
    xmlns:mycontrols="using:OTWB.MyControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lat="using:OTWB.Lattice"
    xmlns:Callisto="using:Callisto.Controls"  
    mc:Ignorable="d" Height="790" Width="1370">

    <common:LayoutAwarePage.Resources>

        <common:Minus1Converter x:Key="Minus1Converter"/>

        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">Lattice Rim Designer</x:String>
    </common:LayoutAwarePage.Resources>
    <common:LayoutAwarePage.BottomAppBar>
        <AppBar>
            <StackPanel Orientation="Horizontal">
                <StackPanel HorizontalAlignment="Left" Height="100" Width="1050" Orientation="Horizontal">
                    <Button x:ConnectionId='4' AutomationProperties.Name="Export Path"                            Style="{StaticResource SyncFolderAppBarButtonStyle}"/>
                    <Button x:ConnectionId='5' AutomationProperties.Name="Export Lattice" HorizontalAlignment="Stretch"                               Style="{StaticResource SyncFolderAppBarButtonStyle}" />
                    <Button x:ConnectionId='6' AutomationProperties.Name="Import Lattice" HorizontalAlignment="Stretch"                               Style="{StaticResource ImportAppBarButtonStyle}" />
                    <Button x:ConnectionId='7'  AutomationProperties.Name="New"                           Style="{StaticResource AddAppBarButtonStyle}" />
                    <Button x:ConnectionId='8'  AutomationProperties.Name="Clear"                             Style="{StaticResource DiscardAppBarButtonStyle}" />
                    <Button x:ConnectionId='9' AutomationProperties.Name="G Code"                     Style="{StaticResource NextAppBarButtonStyle}"  />
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Width="290" RenderTransformOrigin="0,0">
                    <ToggleButton x:ConnectionId='1' AutomationProperties.Name="Grid" Style="{StaticResource ToggleAppBarButtonStyle}"                             />
                    <Button x:ConnectionId='2' AutomationProperties.Name="Grid"                    Style="{StaticResource EditAppBarButtonStyle}" />
                    <Button x:ConnectionId='3' AutomationProperties.Name="Points"                      Style="{StaticResource EditAppBarButtonStyle}" />
                </StackPanel>
            </StackPanel>
        </AppBar>
    </common:LayoutAwarePage.BottomAppBar>
    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Style="{StaticResource LayoutRootStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='22' x:Name="backButton"                IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}"/>
            <TextBlock x:Name="pageTitle" Grid.Column="1" Text="{StaticResource AppName}" Style="{StaticResource PageHeaderTextStyle}"/>
        </Grid>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <StackPanel Width="480" Margin="20,0,0,0">
                <StackPanel Orientation="Horizontal" Margin="0,20,0,20" Height="40">
                    <TextBlock Text="Choose" FontSize="18" Margin="0,0,20,0"/>
                    <ComboBox x:ConnectionId='20' x:Name="PatternChoices" 
                          HorizontalAlignment="Left" 
                          Width="120"
                          ItemsSource="{Binding LatticePatterns}"                                                    RenderTransformOrigin="0.5,0.5">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding PatternIndex}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button x:ConnectionId='21' Style="{StaticResource SettingsAppBarButtonStyle}"                        RenderTransformOrigin="0.5,0.5" Margin="0,-7,0,-23" ToolTipService.ToolTip="Layout Values" >
                        <Button.RenderTransform>
                            <CompositeTransform ScaleX="0.7" ScaleY="0.7" TranslateY="-7"/>
                        </Button.RenderTransform>
                    </Button>
                </StackPanel>
                <StackPanel x:Name="LatticePanel"  Margin="0,0,10,0" DataContext="{Binding SelectedItem, ElementName=PatternChoices}" Height="583">
                    <TextBlock Text="Lines" Style="{StaticResource SubheaderTextStyle}" Margin="0" />
                    <ListView x:ConnectionId='15' x:Name="LatticeLineList" DataContext="{Binding}" ItemsSource="{Binding Lines}" Height="255"                                                    >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#FF969090" BorderThickness="2" CornerRadius="5" ToolTipService.ToolTip="{Binding Name}" >
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Callisto:NumericUpDown Value="{Binding X1, Mode=TwoWay}" />
                                        <Callisto:NumericUpDown Value="{Binding Y1, Mode=TwoWay}" Grid.Column="1" Margin="5,0,0,0"  />
                                        <Callisto:NumericUpDown Value="{Binding X2, Mode=TwoWay}" Grid.Column="2" Margin="5,0,0,0"  />
                                        <Callisto:NumericUpDown Value="{Binding Y2, Mode=TwoWay}" Grid.Column="3" Margin="5,0,0,0"  />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <StackPanel x:Name="SmallDisplay" Height="255" Margin="0,0,5,5" Orientation="Horizontal">
                        <StackPanel>
                            <Button x:ConnectionId='17' x:Name="BigDisplayButton"                        Background="#FFFDF9F9" Height="70" Width="70" HorizontalAlignment="Center" VerticalAlignment="Top" Style="{StaticResource SwitchAppBarButtonStyle}" Margin="0,0,11,0" RenderTransformOrigin="1,1" ToolTipService.ToolTip="Show larger display" >
                                <Button.RenderTransform>
                                    <CompositeTransform ScaleX="0.5" ScaleY="0.5"/>
                                </Button.RenderTransform>
                            </Button>
                            <Button x:ConnectionId='18' x:Name="AddLineButton"                        Style="{StaticResource AddAppBarButtonStyle}" HorizontalAlignment="Right" Width="90" VerticalAlignment="Center" RenderTransformOrigin="1,0" >
                                <Button.RenderTransform>
                                    <CompositeTransform ScaleX="0.5" ScaleY="0.5" TranslateX="-4.995" TranslateY="4.998"/>
                                </Button.RenderTransform>
                            </Button>
                            <Button x:ConnectionId='19' x:Name="RemoveLineButton"                           Style="{StaticResource DeleteAppBarButtonStyle}" HorizontalAlignment="Right" Width="90" VerticalAlignment="Center" RenderTransformOrigin="1,-1" >
                                <Button.RenderTransform>
                                    <CompositeTransform ScaleX="0.5" ScaleY="0.5" TranslateX="-4.995" TranslateY="4.998"/>
                                </Button.RenderTransform>
                            </Button>
                        </StackPanel>
                        <lat:LatticeDisplay x:Name="LatticeDisplay" Height="Auto"  Margin="0" Width="360"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" >
                        <TextBlock Text="Path Width" Style="{StaticResource ItemTextStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,10,0" />
                        <Callisto:NumericUpDown Value="{Binding PathWidth, ElementName=LatticePathDisplay, Mode=TwoWay}" DecimalPlaces="2" Minimum="0.01" Maximum="10" Increment="0.01" />
                        <TextBlock Text="Increment" Style="{StaticResource ItemTextStyle}" Margin="10,0,0,0" />
                        <ComboBox x:ConnectionId='16' x:Name="IncrementCombo" Margin="10,0,0,0"  ItemsSource="{Binding Increments}" RenderTransformOrigin="0.518,0.453" Width="119" HorizontalContentAlignment="Center"                                                    >
                            <ComboBox.DataContext>
                                <local:BasicLib/>
                            </ComboBox.DataContext>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
                <TextBlock x:Name="StatusBlock" Grid.Row="6" Margin="0,0,0,5"  Visibility="Collapsed"/>
                <ProgressRing x:Name="ProgressRing1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="20,20,10,0" Height="28"/>
            </StackPanel>

            <StackPanel Margin="0,-30,0,0" Width="865" DataContext="{Binding SelectedItem, ElementName=PatternChoices}">
                <local:PathDisplay x:Name="LatticeRimPathDisplay" Height="680" RenderTransformOrigin="0,0" Width="845" Margin="0" />
                <Slider x:ConnectionId='14' x:Name="LatticePosition" Height="50" Minimum="-300" Maximum="300" Value="{Binding Layout.ToolPosition}"                                             />
            </StackPanel>
            <Popup x:ConnectionId='10' x:Name="Bigdisplay"                            >
                <Popup.RenderTransform>
                    <CompositeTransform  ScaleX="1" ScaleY="1"/>
                </Popup.RenderTransform>
                <StackPanel>
                    <StackPanel.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="#FF3A4166" Offset="1"/>
                        </LinearGradientBrush>
                    </StackPanel.Background>
                    <StackPanel Orientation="Horizontal">
                        <Button x:ConnectionId='11'                         Style="{StaticResource BackButtonStyle}" />
                        <Button x:ConnectionId='12'                        AutomationProperties.Name="Line" Style="{StaticResource AddAppBarButtonStyle}" />
                        <Button x:ConnectionId='13'                           Style="{StaticResource DeleteAppBarButtonStyle}" />
                    </StackPanel>

                    <lat:LatticeDisplay  x:Name="PopupDisplay" Height="676" />
                </StackPanel>
            </Popup>
        </StackPanel>

        <VisualStateManager.VisualStateGroups>

            <!-- Visual states reflect the application's view state -->
            <VisualStateGroup x:Name="ApplicationViewStates">
                <VisualState x:Name="FullScreenLandscape"/>
                <VisualState x:Name="Filled"/>

                <!-- The entire page respects the narrower 100-pixel margin convention for portrait -->
                <VisualState x:Name="FullScreenPortrait">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PortraitBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

                <!-- The back button and title have different styles when snapped -->
                <VisualState x:Name="Snapped">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pageTitle" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedPageHeaderTextStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</common:LayoutAwarePage>

