<common:LayoutAwarePage
    x:Name="pageRoot"
    x:Class="Geometric_Chuck.MainPage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Geometric_Chuck"
    xmlns:common="using:Geometric_Chuck.Common"
    xmlns:mycontrols="using:Geometric_Chuck.MyControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tcd="using:TCD.Controls"
    xmlns:Controls="using:Callisto.Controls" 
    mc:Ignorable="d" Width="1364">

    <common:LayoutAwarePage.Resources>

        <common:PolyPointsConverter x:Key="PolyPointsConverter"/>
        <common:PointIndexConverter x:Key="PathIndexConverter"/>
        <common:PatternPathListNameConverter x:Key="ChuckPathListNameConverter"/>
        <common:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">Geometric Chuck Simulation</x:String>
    </common:LayoutAwarePage.Resources>
    <common:LayoutAwarePage.BottomAppBar>
        <AppBar>
            <StackPanel Orientation="Horizontal" Margin="0,0,-20,0">
                <StackPanel HorizontalAlignment="Left" Height="100" Width="1138" Orientation="Horizontal">
                    <Button x:ConnectionId='3' AutomationProperties.Name="Save Pattern" Style="{StaticResource SaveAppBarButtonStyle}"                           />
                    <Button x:ConnectionId='4' AutomationProperties.Name="Export Path" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                           Style="{StaticResource SaveAppBarButtonStyle}"/>
                    <Button x:ConnectionId='5' AutomationProperties.Name="Edit Stage"                         Style="{StaticResource EditAppBarButtonStyle}" />
                    <Button x:ConnectionId='6' AutomationProperties.Name="Test"                     Style="{StaticResource UploadAppBarButtonStyle}" />
                    <Button x:ConnectionId='7' AutomationProperties.Name="G Code"                     Style="{StaticResource NextAppBarButtonStyle}"  />
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Width="214" RenderTransformOrigin="0,0">
                    <Button x:ConnectionId='1' AutomationProperties.Name="Grid"                    Style="{StaticResource EditAppBarButtonStyle}" />
                    <Button x:ConnectionId='2' AutomationProperties.Name="Points"                      Style="{StaticResource EditAppBarButtonStyle}" />
                </StackPanel>
            </StackPanel>
        </AppBar>
    </common:LayoutAwarePage.BottomAppBar>
    <!--<common:LayoutAwarePage.TopAppBar>
        <AppBar>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                
            </StackPanel>
           
        </AppBar>
    </common:LayoutAwarePage.TopAppBar>-->
    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Style="{StaticResource LayoutRootStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="109"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='10' x:Name="backButton"                IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}"/>
            <TextBlock x:Name="pageTitle" Grid.Column="1" Text="Bazely " Style="{StaticResource PageHeaderTextStyle}"/>                  
        </Grid>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
        <StackPanel Width="310" Margin="20,0,0,0">
                 <StackPanel Orientation="Horizontal" Margin="0,20,0,20">
                    <TextBlock Text="Choose Pattern" Style="{StaticResource GroupHeaderTextStyle}" />
                    <ComboBox x:ConnectionId='9' x:Name="PatternChoices" 
                          HorizontalAlignment="Left" 
                          Width="120"
                          ItemsSource="{Binding BazeleyPatterns}"                                                   >
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding PatternIndex}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
                <StackPanel Margin="0,0,10,0">
                    <StackPanel x:Name="BazelyChuckData" DataContext="{Binding SelectedItem, ElementName=PatternChoices}" Height="481">
                        <StackPanel x:Name="stackPanel" Orientation="Horizontal" >
                            <TextBlock Text="SR is " Margin="0,0,20,0" Style="{StaticResource SubheaderTextStyle}" Height="32"/>
                            <Controls:NumericUpDown Value="{Binding SR, Mode=TwoWay}" Width="141" DecimalPlaces="2" Minimum="-100" />
                        </StackPanel>
                        <ListView Height="372"  x:Name="BazelyStageList" ItemsSource="{Binding SelectedItem.Stages, ElementName=PatternChoices}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <mycontrols:BSDControl DataContext="{Binding}"/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <StackPanel Height="146">
                            <TextBlock Text="Script" Style="{StaticResource SubheaderTextStyle}" Height="112" />
                            <TextBlock Text="" />
                            <TextBlock x:Name="ScriptBlock" Text="{Binding Script}" />
                        </StackPanel>
                    </StackPanel> 
                    <StackPanel Orientation="Horizontal" >
                        <TextBlock Text="Path Width" Style="{StaticResource ItemTextStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,10,0" />
                        <Controls:NumericUpDown Value="{Binding PathWidth, ElementName=BazelyPathDisplay, Mode=TwoWay}" DecimalPlaces="2" Minimum="0.1" Maximum="16" Increment="0.1" />          
                    </StackPanel>
                    <StackPanel Margin="0,10,0,0" Orientation="Horizontal" Height="52">
                       
                        <TextBlock Text="Increment" Style="{StaticResource ItemTextStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        <ComboBox x:ConnectionId='8' x:Name="IncrementCombo" Margin="10,0,0,0" IsSynchronizedWithCurrentItem="False" ItemsSource="{Binding Increments}" RenderTransformOrigin="0.518,0.453" Width="119" HorizontalContentAlignment="Center"                                                    >
                            <ComboBox.DataContext>
                                <local:BasicLib/>
                            </ComboBox.DataContext>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
                <ProgressRing x:Name="ProgressRing1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="20,20,10,0" Height="28" IsActive="True"/>
                <TextBlock x:Name="StatusBlock" Grid.Row="6" Margin="0,0,0,5"  Visibility="Collapsed"/>
            </StackPanel>
            <local:PathDisplay x:Name="BazelyPathDisplay" Height="Auto" RenderTransformOrigin="0,0" Width="1030" Margin="0,-99,0,0"/>
           
        </StackPanel>
        <VisualStateManager.VisualStateGroups>

            <!-- Visual states reflect the application's view state -->
            <VisualStateGroup x:Name="ApplicationViewStates">
                <VisualState x:Name="FullScreenLandscape"/>
                <VisualState x:Name="Filled"/>

                <!-- The entire page respects the narrower 100-pixel margin convention for portrait -->
                <VisualState x:Name="FullScreenPortrait">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PortraitBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

                <!-- The back button and title have different styles when snapped -->
                <VisualState x:Name="Snapped">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pageTitle" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedPageHeaderTextStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</common:LayoutAwarePage>

