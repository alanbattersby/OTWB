<UserControl
    x:Class="OTWB.MyControls.NewRosetteControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OTWB.MyControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="798" Width="246">
    
    <Grid>
        <ScrollViewer HorizontalScrollMode="Disabled" Margin="0,0,0,0">
            <StackPanel>
                <Button x:ConnectionId='1'                        RenderTransformOrigin="0.5,0.5" >
                    <Button.RenderTransform>
                        <CompositeTransform ScaleX="0.5" ScaleY="0.5"/>
                    </Button.RenderTransform>
                    <Image Source="ms-appx:///Assets/ellipse_rosette.png" Stretch="None" RenderTransformOrigin="0.5,0.5" >
                       
                    </Image>
                </Button>
                <Button x:ConnectionId='2'                        RenderTransformOrigin="0.5,0.5" >
                    <Button.RenderTransform>
                        <CompositeTransform ScaleX="0.5" ScaleY="0.5"/>
                    </Button.RenderTransform>
                    <Image Source="ms-appx:///Assets/wave_rosette.png" Stretch="None" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Center" >
                       
                    </Image>
                </Button>
                <Button x:ConnectionId='3'                        RenderTransformOrigin="0.5,0.5" >
                    <Button.RenderTransform>
                        <CompositeTransform ScaleX="0.5" ScaleY="0.5"/>
                    </Button.RenderTransform>
                    <Image Source="ms-appx:///Assets/squarewave_rosette.png" Stretch="None" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Center" >

                    </Image>
                </Button>
                <Button x:ConnectionId='4'                        RenderTransformOrigin="0.5,0.5" >
                    <Button.RenderTransform>
                        <CompositeTransform ScaleX="0.5" ScaleY="0.5"/>
                    </Button.RenderTransform>
                    <Image Source="ms-appx:///Assets/petal_rosette.png" Stretch="None" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Center" >

                    </Image>
                </Button>
                <Button x:ConnectionId='5'                        RenderTransformOrigin="0.5,0.5" >
                    <Button.RenderTransform>
                        <CompositeTransform ScaleX="0.5" ScaleY="0.5"/>
                    </Button.RenderTransform>
                    <Image Source="ms-appx:///Assets/poly_rosette.png" Stretch="None" RenderTransformOrigin="0.5,0.5" >
                       
                    </Image>
                </Button>
                <Button x:ConnectionId='6'                        RenderTransformOrigin="0.5,0.5" >
                    <Button.RenderTransform>
                        <CompositeTransform ScaleX="0.5" ScaleY="0.5"/>
                    </Button.RenderTransform>
                    <Image Source="ms-appx:///Assets/gear_rosette.png" Stretch="None" RenderTransformOrigin="0.5,0.5" >
                       
                    </Image>
                </Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

